                                            <div class="title">Budget Line Items</div>
                                        </div>
                                        <div class="section-body table-responsive">
                                            <table class="table  table-hover table-default">
                                                <thead>
                                                    <tr>
                                                        <th><div style="display:none;">blank</div></th> <!-- Accessibility Issues -->
                                                        <th>Category Line</th>
