                                                                </td>
                                                            </tr>
                                                            <apex:repeat value="{!budgetCategory.Budget_Category_Lines__r}" var="budCatLine">
                                                                <tr class="budget-row">
                                                                    <td><apex:outputField value="{!mapOfBudgetLineIdAndMilestones[budCatLine.Id].budgetCategoryLine.Name}"/></td>
                                                                    <td class="fill"><apex:outputField value="{!mapOfBudgetLineIdAndMilestones[budCatLine.Id].budgetCategoryLine.NYSERDACost__c}"/></td>
                                                                    <td><apex:outputField value="{!mapOfBudgetLineIdAndMilestones[budCatLine.Id].budgetCategoryLine.CostShare__c}"/></td>
                                                                    <td class="fill"><apex:outputField value="{!mapOfBudgetLineIdAndMilestones[budCatLine.Id].budgetCategoryLine.Billed_To_Date__c}"/></td>
                                                                    <td><apex:outputField value="{!mapOfBudgetLineIdAndMilestones[budCatLine.Id].budgetCategoryLine.Billed_To_Date_Cost_Share__c}"/></td>
